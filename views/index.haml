!!! XML
!!! Strict
%html{html_attrs}
  %head
    %meta{ :'http-equiv' => 'content-type', :content => 'text/html;charset=UTF-8' }
    %title= 'Projectr'
    
    %link{ :href => 'http://yui.yahooapis.com/2.7.0/build/reset/reset-min.css', :rel => 'stylesheet', :type => 'text/css' }
    %link{ :href => '/stylesheets/projectr.css', :rel => 'stylesheet', :type => 'text/css' }
    
    %script{ :src => '/javascripts/jquery-1.3.2.min.js', :type => 'text/javascript' }
    %script{ :src => '/javascripts/jquery.relatize_date.js', :type => 'text/javascript' }
    %script{ :src => '/javascripts/projectr.js', :type => 'text/javascript' }
    
  %body
    #header
      %h1= 'Projectr'
      
    #article
      %ul
        - @projects.each do |project|
          %li
            %a{ :href => "/#{project.name}" }= project.name
    